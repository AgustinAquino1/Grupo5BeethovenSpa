<header>

    <div class = "top-header">
        <div class="menu">
           <i class="fas fa-bars"></i>
           <div class="burger">
               <ul class="menu-items">
                <li class="menu-item">
                    <a  href="/" class="menu-link">HOME</a>
                </li>
                <li class="menu-item">
                    <a  href="#" class="menu-link">ROPA</a>
                </li>
                <li class="menu-item">
                    <a  href="#" class="menu-link">ACCESORIOS</a>
                </li>
                <li class="menu-item">
                    <a  href="#" class="menu-link">EXPERIENCIA SPA</a>
                </li>
                <li class="menu-item">
                    <a href="#"  class="menu-link">EXPERIENCIA GOURMET</a>
                </li>                            
            </ul>
           </div>


       </div>

        <div class = "logo-container-buscador">
            <div class = "logo-container">
                <a href="/"><img class="logo" src="/img/BeethovenSpaLogo.png"></a>
                <h1>Beethoven Spa</h1>
            </div>
            <div class="buscador">
                <form action="/" method="POST" enctype="multipart/form-data">
                <input name ="searchProducts" class="barra" type="search" placeholder="Buscar productos y/o servicios">
                <button type="submit" class="search"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>

        </div>

        <div class = "nav-right">
            <a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i></a>
            <% if (locals.isLogged) { %>
                <a href="/users/profile/<%= locals.userLogged.name %>"><img src="/img/users/<%= locals.userLogged.avatar %>" class ="avatar"></a>
                <a id="logout"  href="/users/logout">Logout</a>               
            <% } else {%>

                <a href="/users/login"><i class="fa-regular fa-user"></i></a>
            <% } %>
        </div>

    </div>
    <script type="text/javascript" src="/js/header.js"></script>
    
</header>