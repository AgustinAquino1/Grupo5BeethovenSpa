<!DOCTYPE html>
<html lang="en">

<%- include ('partials/head')%>

<body>
 
    <%- include ('partials/header')%>

    <main>

        <form action="/products/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="personal-information">
          <div class="title-information"><h3>Crear producto</h3></div>
                 
          
     
         
          <div class="main-link">
            <input type="text" name="name" value="<%= product.name %> Nombre del pro">
           </div>

           <div class="main-link">
               <input type="text" name="brand" value="<%= product.brand %> Marca del pro">
           </div>

           <div class="main-link">
               <input type="text" name="description" value="<%= product.description %> Descri">
           </div>

           
           <div class="main-link">
               <input type="text" name="color" value="<%= product.color %> ">
           </div>
           <div class="main-link">
               <input type="text" name="stock" value="<%= product.stock %> ">
           </div>

           <div class="main-link">
               <input type="text" name="price" value="<%= product.price %> ">
           </div>

           <div class="main-link">
               <input type="text" name="pet_type" value="<%= product.pet_type %>">
           </div>

           <div class="main-link">
               <input type="text" name="pet_size" value="<%= product.pet_size %>" >
           </div>

           <div class="main-link">
               <input type="text" name="pet_age" value="<%= product.pet_age %>">
           </div>

           <div class="main-link">
               <input type="text" name="breed" value="<%= product.breed %>">
           </div>

           <div class="main-link">
            <img class="image-edit" src="/img/products/<%= product.f_image %>" alt="" >
               <input type="file" name="f_image" >
           </div>

           <div class="main-link">
            <img class="image-edit" src="/img/products/<%= product.image %>" alt="" >
               <input type="file" name="image">
           </div>
           <div class="main-link">
            <img class="image-edit" src="/img/products/<%= product.image1 %>" alt="" >
               <input type="file" name="image1" >
           </div>
           <div class="main-link">
            <img class="image-edit" src="/img/products/<%= product.image2 %>" alt="" >
               <input type="file" name="image2">
           </div>  
     
     
            <div class="container">
        
                  <button type="submit" class="boton-crear">  modificar </button>
            </div>


     
        </div>
           
    
                
    </form>

        
      </main>


        <%- include ('partials/footer')%>

</body>
</html>
